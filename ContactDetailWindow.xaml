<Window x:Class="DesktopContactsApp.ContactDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="ContactDetailWindow" Height="450" Width="300">
    <Grid>
        <StackPanel Margin="5">
            <Label Margin="0,0,0,5">Name:</Label>
            <TextBox x:Name="nameTextBox"

                     Margin="0,0,0,5"></TextBox>
            <Label Margin="0,0,0,5">Phone:</Label>
            <TextBox x:Name="phoneTextBox"
                     Margin="0,0,0,5"></TextBox>
            <Label Margin="0,0,0,5">Email:</Label>
            <TextBox x:Name="emailTextBox"
                     Margin="0,0,0,5"></TextBox>
            <Button x:Name="updateButton"
                    Content="Update"
                    Margin="0,0,0,5"></Button>
            <Button x:Name="deleteButton"
                    Background="Red"
                    Foreground="White"
                    Content="Delete"
                    Click="deleteButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
